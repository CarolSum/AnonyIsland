<Page
    x:Class="AnonyIsland.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:AnonyIsland"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <SplitView
            Name="mainSplitView"
            CompactPaneLength="54"
            DisplayMode="CompactOverlay"
            OpenPaneLength="150">
            <SplitView.Pane>
                <ListBox
                    Name="mainNavigationList"
                    SelectionChanged="mainNavigationList_SelectionChanged"
                    SelectionMode="Single">
                    <ListBoxItem
                        Name="menuItem"
                        Tag="0"
                        Tapped="ListBoxItem_Tapped">
                        <!--  汉堡按钮  -->
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="30"
                                Text="&#xE700;" />
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem
                        Name="homeItem"
                        Tag="1"
                        Tapped="ListBoxItem_Tapped">
                        <!--  首页  -->
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                Padding="0,4,0,0"
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="30"
                                Text="&#xE80F;" />
                            <TextBlock
                                Margin="12,0,0,0"
                                FontFamily="微软雅黑"
                                FontSize="24"
                                Text="首页" />
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem
                        Name="newsItem"
                        Tag="2"
                        Tapped="ListBoxItem_Tapped">
                        <!--  新闻  -->
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                Padding="0,4,0,0"
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="30"
                                Text="&#xE763;"
                                TextAlignment="Center" />
                            <TextBlock
                                Margin="12,0,0,0"
                                FontFamily="微软雅黑"
                                FontSize="24"
                                Text="新闻" />
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem
                        Name="rankItem"
                        Tag="3"
                        Tapped="ListBoxItem_Tapped">
                        <!--  排行榜  -->
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                Padding="0,4,0,0"
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="30"
                                Text="&#xE71D;"
                                TextAlignment="Center" />
                            <TextBlock
                                Margin="12,0,0,0"
                                FontFamily="微软雅黑"
                                FontSize="24"
                                Text="琅琊榜" />
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem
                        Name="flashItem"
                        Tag="4"
                        Tapped="ListBoxItem_Tapped"
                        Visibility="Collapsed">
                        <!--  闪存  -->
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                Padding="0,4,0,0"
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="30"
                                Text="&#xE25C;"
                                TextAlignment="Center" />
                            <TextBlock
                                Margin="12,0,0,0"
                                FontFamily="微软雅黑"
                                FontSize="24"
                                Text="闪存" />
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem
                        Name="msgItem"
                        Tag="5"
                        Tapped="ListBoxItem_Tapped"
                        Visibility="Collapsed">
                        <!--  站内信  -->
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                Padding="0,4,0,0"
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="30"
                                Text="&#xE715;"
                                TextAlignment="Center" />
                            <TextBlock
                                Margin="12,0,0,0"
                                FontFamily="微软雅黑"
                                FontSize="24"
                                Text="站内信" />
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem
                        Name="collectionItem"
                        Tag="6"
                        Tapped="ListBoxItem_Tapped"
                        Visibility="Collapsed">
                        <!--  收藏  -->
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                Padding="0,4,0,0"
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="30"
                                Text="&#xE1CE;"
                                TextAlignment="Center" />
                            <TextBlock
                                Margin="12,0,0,0"
                                FontFamily="微软雅黑"
                                FontSize="24"
                                Text="收藏" />
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem
                        Name="searchItem"
                        Tag="7"
                        Tapped="ListBoxItem_Tapped">
                        <!--  搜索  -->
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                Padding="0,4,0,0"
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="30"
                                Text="&#xE721;"
                                TextAlignment="Center" />
                            <TextBlock
                                Margin="12,0,0,0"
                                FontFamily="微软雅黑"
                                FontSize="24"
                                Text="搜索" />
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem Padding="0,10,0,10" IsEnabled="False">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                Margin="0"
                                Padding="0"
                                Text="——————————————————————" />
                        </StackPanel>
                    </ListBoxItem>
                    <!--<ListBoxItem
                        Name="LoginItem"
                        Tag="8"
                        Tapped="ListBoxItem_Tapped">
                    -->
                    <!--  登录  -->
                    <!--
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                Name="LoginIcon"
                                Padding="0,4,0,0"
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="30"
                                Text="&#xE2AF;"
                                TextAlignment="Center" />
                            <Image
                                Name="Avatar"
                                Width="35"
                                Margin="0"
                                VerticalAlignment="Center"
                                Visibility="Collapsed" />
                            <TextBlock
                                Name="NickNameOrTip"
                                Margin="12,0,0,0"
                                VerticalAlignment="Center"
                                FontFamily="微软雅黑"
                                FontSize="24"
                                Text="登录" />
                        </StackPanel>
                    </ListBoxItem>-->
                    <!--<ListBoxItem
                        Name="logoutItem"
                        Tag="9"
                        Tapped="ListBoxItem_Tapped"
                        Visibility="Collapsed">
                    -->
                    <!--  注销  -->
                    <!--
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                Padding="0,4,0,0"
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="30"
                                Text="&#xE25B;"
                                TextAlignment="Center" />
                            <TextBlock
                                Margin="12,0,0,0"
                                FontFamily="微软雅黑"
                                FontSize="24"
                                Text="注销" />
                        </StackPanel>
                    </ListBoxItem>-->
                    <ListBoxItem
                        Name="settingItem"
                        Tag="10"
                        Tapped="ListBoxItem_Tapped">
                        <!--  设置  -->
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                Padding="0,4,0,0"
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="30"
                                Text="&#xE713;"
                                TextAlignment="Center" />
                            <TextBlock
                                Margin="12,0,0,0"
                                FontFamily="微软雅黑"
                                FontSize="24"
                                Text="设置" />
                        </StackPanel>
                    </ListBoxItem>
                </ListBox>
            </SplitView.Pane>
            <SplitView.Content>
                <Frame Name="mainFrame">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Text="hello world" />
                </Frame>
            </SplitView.Content>
        </SplitView>
    </Grid>
</Page>

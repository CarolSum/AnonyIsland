<ContentDialog
    x:Class="AnonyIsland.AboutDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:AnonyIsland"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="关于"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    PrimaryButtonText="确定"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0"
            Margin="0,10,0,0"
            FontWeight="Bold"
            Text="声明" />
        <TextBlock
            Grid.Row="1"
            Text="  此UWP应用基于博客园(cnblog.com)开发，紧用于学习交流。"
            TextWrapping="Wrap" />
        <TextBlock
            Grid.Row="2"
            Margin="0,10,0,0"
            FontWeight="Bold"
            Text="开源地址" />
        <HyperlinkButton
            Grid.Row="3"
            Margin="10,0,0,0"
            Content="https://github.com/CarolSum/AnonyIsland"
            NavigateUri="https://github.com/CarolSum/AnonyIsland" />
    </Grid>
</ContentDialog>
